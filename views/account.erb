<div class="simplecenter">

  <h3>YOUR HOMEPAGE</h3>
  <% if session[:user] == nil %>
    <p>
      Sign up!
    </p>
    <% elsif session[:user] != nil %>
      <p>Welcome back,
        <%= session[:user].first_name %>
        <p>
        <% end %>

        <div class="new-post-box">
          <form action="/posts" method="post">
            <h3>New post</h3>
            <textarea id="post-title" name="title" placeholder="Title" required="required"></textarea>
            <textarea id="post-content" name="content" placeholder="Your Musing" required="required"></textarea>
            <textarea id="post-image" name="image_url" placeholder="Image url (optional)"></textarea>
            <input type="submit">
          </form>
        </div>
      </div>
